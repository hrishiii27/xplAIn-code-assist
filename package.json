{
  "name": "xplAIn-code-assist",
  "displayName": "xplAIn: AI Code Refactor & Analysis",
  "description": "Enhance code understanding and refactoring with AI-powered analysis, alternatives, diffs, and smart fixes.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "main": "./out/extension.js",
  "categories": ["Other", "Programming Languages", "Linters", "AI"],
  "keywords": ["AI", "Code", "Refactor", "Analysis", "Diff", "Issues"],
  "author": "hrishiii27",
  "publisher": "hrishiii27",
  "activationEvents": [
    "onCommand:xplAIn-code-assist.analyzeCodeBlock",
    "onCommand:xplAIn-code-assist.setGeminiApiKey",
    "onCommand:xplAIn-code-assist.suggestAlternatives",
    "onCommand:xplAIn-code-assist.showCodeDiff",
    "onCommand:xplAIn-code-assist.analyzeSelectedForIssues"
  ],
  "contributes": {
    "commands": [
      {
        "command": "xplAIn-code-assist.analyzeCodeBlock",
        "title": "AI: Analyze Selected Code Block"
      },
      {
        "command": "xplAIn-code-assist.setGeminiApiKey",
        "title": "AI: Set Gemini API Key"
      },
      {
        "command": "xplAIn-code-assist.suggestAlternatives",
        "title": "AI: Suggest Alternative Implementations"
      },
      {
        "command": "xplAIn-code-assist.showCodeDiff",
        "title": "AI: Show Code Diff with Alternative"
      },
      {
        "command": "xplAIn-code-assist.analyzeSelectedForIssues",
        "title": "AI: Analyze Selected Code for Issues"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.101.0",
    "vscode": "^1.1.37",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
